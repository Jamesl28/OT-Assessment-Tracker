# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgresql://ot_user:ot_password@localhost:5432/ot_assessment_db

# Multi-Tenancy
TENANT_MODEL=organizations.Organization
TENANT_DOMAIN_MODEL=organizations.Domain

# Security
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
CSRF_COOKIE_SECURE=False      # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_EXPIRE_SECONDS=900    # 15 minutes

# CORS (for React frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Encryption (will use KMS in production)
FIELD_ENCRYPTION_KEY=temporary-dev-key-32-characters!!

# Email (for password resets, 2FA, etc - configure later)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
